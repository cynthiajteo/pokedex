<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head.ejs')%>
    </head>
    <body>
        <h1>Pokedex - <%=item.name%></h1>
        <div class="container">
            <div class="details">
                <br />
                <img src="<%=item.img%>" alt="<%=item.name%>" class="showImg" />
            </div>

            <div class="details">
                <ul>
                    <h3>Type:</h3>

                    <% for (const [key, value] of Object.entries(item.type)) {
                    %>
                    <li><%=value%></li>
                    <% } %>
                </ul>
            </div>

            <div class="details">
                <ul>
                    <h3>Stats:</h3>
                    <li>HP: <%=item.stats.hp%></li>
                    <li>Attack: <%=item.stats.attack%></li>
                    <li>Defense: <%=item.stats.defense%></li>
                </ul>
            </div>
        </div>
        <div class="show-actions">
            <% const id = pokemon.indexOf(item)%>
            <a href="/pokemon"><button id="button">Home</button></a>
            <a href="/pokemon/<%=id%>/edit"
                ><button id="button">Edit</button></a
            >
            <form action="/pokemon/<%=id%>?_method=DELETE" method="POST">
                <input type="submit" value="Delete" />
            </form>
        </div>
    </body>
</html>
