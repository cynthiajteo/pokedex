<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head.ejs')%>
    </head>
    <body>
        <h1>Edit <%=item.name%></h1>
        <div class="container">
            <img src="<%=item.img%>" alt="<%=item.name%>" class="showImg" />
            <div class="form">
                <form action="/pokemon/<%=index%>?_method=PUT" method="POST">
                    <label for="name">Name</label>
                    <input
                        type="text"
                        name="name"
                        id="name"
                        value="<%=item.name%>"
                    />
                    <label for="type">Type</label>
                    <input
                        type="text"
                        name="type"
                        id="type"
                        value="<%=item.type%>"
                    />
                    <label for="statsAtt">Attack</label>
                    <input
                        type="text"
                        name="statsAtt"
                        id="statsAtt"
                        value="<%=item.stats.attack%>"
                    />
                    <label for="name">Defense</label>
                    <input
                        type="text"
                        name="statsDef"
                        id="statsDef"
                        value="<%=item.stats.defense%>"
                    />
                    <br />
                    <input type="submit" value="Edit Pokemon" />
                </form>
            </div>
            <div class="actions">
                <a href="/pokemon"><button>Home</button></a>
            </div>
        </div>
    </body>
</html>
