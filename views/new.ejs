<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head.ejs')%>
    </head>
    <body>
        <h1>Add new Pokemon</h1>
        <div class="container">
            <div class="form">
                <form action="/pokemon/" method="POST">
                    <label for="name">Name</label>
                    <input type="text" name="name" id="name" required="true" />
                    <label for="img">Image Url</label>
                    <input type="text" name="img" id="img" required="true" />
                    <label for="type">Type</label>
                    <input type="text" name="type" id="type" required="true" />
                    <label for="statsHP">HP</label>
                    <input
                        type="number"
                        name="statsHP"
                        id="statsHP"
                        required="true"
                    />
                    <label for="statsAtt">Attack</label>
                    <input
                        type="number"
                        name="statAtt"
                        id="statsAtt"
                        required="true"
                    />
                    <label for="statsDef">Defense</label>
                    <input
                        type="number"
                        name="statsDef"
                        id="statsDef"
                        required="true"
                    />
                    <input type="submit" value="Add" />
                </form>
            </div>
            <div class="actions">
                <a href="/pokemon"><button>Home</button></a>
            </div>
        </div>
    </body>
</html>
